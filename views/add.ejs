<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="/css/add.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Alex+Brush&family=Alfa+Slab+One&family=Bebas+Neue&family=Black+Ops+One&family=Delicious+Handrawn&family=Montserrat:wght@600;700;800;900&family=Mouse+Memoirs&family=Oswald:wght@200;300;400;500;600;700&family=Pacifico&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,900&family=Roboto+Mono:wght@100;200;300;400;500;600;700&family=Roboto+Slab:wght@100;300;500&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <script src='https://cdnjs.cloudflare.com/ajax/libs/d3/5.9.1/d3.min.js'></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

</head>

<body>
    <%- include('./sideNav') %>
    <div class="mainContent">
        <form class="form" method="POST" action="" enctype="multipart/form-data">
            <div class="division1">

                <div class="topicName">
                    <label for="topicName">Topic Name:</label>
                    <input class="topicName" name="fname" type="text">
                </div>

                <div class="class">
                    <label for="class">Choose Notes Class:</label>
                    <select name="class" id="select">
                        <option value="college 3rd year">college 3rd year</option>
                        <option value="college 2nd year">college 2nd year</option>
                        <option value="college 1st year">college 1st year</option>
                        <option value="twelth">twelth</option>
                        <option value="eleventh">eleventh</option>
                        <option value="tenth">tenth</option>
                        <option value="ninth">ninth</option>
                    </select>
                </div>

                <div class="subject">
                    <label for="subject">Subject:</label>
                    <input class="subject" name="subject" type="text">
                </div>

                <div class="file">
                    <label for="file">Choose File:</label>
                    <input id="file" onchange="preview()" class="fileInp" name="file" type="file">
                </div>
                <button class="button">Submit</button>
            </div>
            <div class="division2">
                <iframe id="preview" src="" frameborder="0"></iframe>
            </div>
        </form>
    </div>
    <script>
        var file = document.getElementById("file").files[0];
        var preview = document.getElementById("preview");
        function preview() {
            preview.src = URL.createObjectURL(file)
        }
    </script>
</body>

</html>